{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "details": {
      "type": "component",
      "repeatable": true,
      "component": "product.characteristics"
    },
    "family": {
      "type": "enumeration",
      "enum": [
        "mDeck",
        "MAM4PRO"
      ]
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "datasheet": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": false
    },
    "shortDescription": {
      "type": "string"
    },
    "longDescription": {
      "type": "text"
    },
    "markets": {
      "collection": "markets",
      "via": "products"
    },
    "services": {
      "collection": "services",
      "via": "products"
    },
    "explore": {
      "model": "explore",
      "via": "products"
    },
    "partNumber": {
      "type": "string"
    },
    "price": {
      "type": "biginteger"
    }
  }
}
